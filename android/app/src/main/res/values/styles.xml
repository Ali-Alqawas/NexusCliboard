<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NexusClip Theme Configuration -->
    
    <!-- Launch Theme - Shown while Flutter initializes -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#001E28</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Normal Theme - Used after Flutter engine starts -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">#001E28</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#001E28</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Overlay Theme - For transparent overlay activities -->
    <style name="OverlayTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>
